@{
    Layout = "_Layout";
}

@using Capstone.Models;


<h1>employees</h1>

@if (@Model.Count == 0)
{
  <h3>No employees have been added yet!</h3>
} 
else
{
  <ul>
    @foreach (Employee employee in Model)
    {
      <li>@Html.ActionLink($"{employee.Name}", "Details", new { id = employee.EmployeeId }) ID# @employee.EmployeeId</li>
    }
  </ul>
}

<p>@Html.ActionLink("Add new employee", "Create")</p>
<p>@Html.ActionLink("Home", "Index", "Home")</p>