@{
    Layout = "_Layout";
}

@using Capstone.Models;


<h1>services</h1>

@if (@Model.Count == 0)
{
  <h3>No services have been added yet!</h3>
} 
else
{
  <ul>
    @foreach (Service service in Model)
    {
      <li>@Html.ActionLink($"{service.Name}", "Details", new { id = service.ServiceId }) ID# @service.ServiceId</li>
    }
  </ul>
}

<p>@Html.ActionLink("Add new service", "Create")</p>
<p>@Html.ActionLink("Home", "Index", "Home")</p>